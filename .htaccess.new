# 基本的なセキュリティ設定のみ

# config.phpへの直接アクセスを禁止
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# デバッグファイルへのアクセスを禁止（本番環境用）
<FilesMatch "(test\.php|info\.php|simple-test\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# 基本的なセキュリティヘッダー
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>